<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nostr.universe" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Spring</name>
  <description>The Nostr browser.</description>
  <author email="artur@nostr.band" href="https://nostr.band/">
    Nostr.Band Team
  </author>
  <access origin="*" />
  <content src="index.html" />
  <allow-intent href="lightning:*" />
  <allow-intent href="nostr:*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />
  <icon src='www/img/ico.png' />
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="AndroidWindowSplashScreenAnimatedIcon" value="platforms/android/app/src/main/res/drawable/splash.png" />
  <edit-config 
      xmlns:android="http://schemas.android.com/apk/res/android" 
      file="app/src/main/AndroidManifest.xml" 
      mode="merge" 
      target="/manifest/application"> 
    <application android:usesCleartextTraffic="true" /> 
  </edit-config>
</widget>
